    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#E0E0E0"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale scaleWidth="100%">
            <shape>
                <solid android:color="#2E7D32"/> <corners android:radius="5dp"/>
            </shape>
        </scale>
    </item>
</layer-list>